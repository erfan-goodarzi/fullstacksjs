---
import Header from '../components/Header.astro';
import Social from '../components/Social.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <meta property="og:title" content="FullstacksJS Community" />
    <meta
      property="og:description"
      content="FullstacksJS is an open-source community focused on knowledge sharing, exploring, and enhancing developer experience."
    />
    <meta property="og:image" content="https://fullstacksjs.com/og.png" />

    <meta name="twitter:title" content="FullstacksJS Community" />
    <meta
      name="twitter:description"
      content="FullstacksJS is an open-source community focused on knowledge sharing, exploring, and enhancing developer experience."
    />
    <meta name="twitter:image" content="https://fullstacksjs.com/og.png" />
    <meta name="twitter:card" content="summary_large_image" />

    <link
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700&display=block"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="container">
      <slot />
    </main>
    <Social />
  </body>
</html>
<style is:global>
  :root {
    --accent: #f39f47;
    --accent-1: #d19a67;
    --bg: #212025;
    --fg-0: #e6e6e6;
    --fg-1: #b3b3b3;
    --fg-muted: rgb(255 255 255 / 0.2);
    scroll-behavior: smooth;
  }

  * {
    box-sizing: border-box;
    scrollbar-color: var(--fg-muted) transparent;
    scrollbar-width: thin;
  }

  a {
    text-decoration: none;
    color: unset;
  }

  ul,
  hr {
    padding: 0;
    margin: 0;
  }

  ::-webkit-scrollbar {
    width: 2px;
    height: 4px;
    background-color: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: var(--fg-muted);
  }

  strong {
    color: var(--accent);
  }

  html {
    font-family: 'Inconsolata', monospace;
    background-color: var(--bg);
    font-size: 0.625rem;
    color: var(--fg-1);
  }

  body {
    margin: 0;
    font-size: 2rem;
    padding-bottom: 4rem;
  }

  h1 {
    color: var(--fg-0);
    font-size: 2.8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.05;
  }

  p {
    font-weight: 400;
    line-height: 1.2;
    color: var(--fg-1);
    margin: 0;
  }

  .container {
    margin: 0 3rem;
  }

  b {
  }

  @media screen and (min-width: 560px) {
    .container {
      max-width: 500px;
      margin: 0 auto;
    }

    h1 {
      font-size: 3.2rem;
    }
  }

  @media screen and (min-width: 760px) {
    .container {
      max-width: 700px;
      margin: 0 auto;
    }
  }

  @media screen and (min-width: 960px) {
    .container {
      max-width: 900px;
      margin: 0 auto;
    }
  }
</style>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 4rem 0;
    text-align: justify;
  }
</style>
