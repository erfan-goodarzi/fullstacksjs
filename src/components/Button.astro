---
import { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {}
---

<a class="button" {...Astro.props}><slot /></a>

<style>
  .button {
    background-color: var(--accent);
    text-transform: uppercase;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 12px 30px;
    color: var(--bg);

    border: 4px solid #60462f;
    box-shadow: 0px 4px 22px 4px rgba(243, 159, 71, 0.16);
    border-radius: 8px;

    font-style: normal;
    font-weight: 700;
    font-size: 22px;
    line-height: 23px;
  }

  .button:focus {
    outline: 1px solid var(--accent);
  }
</style>
